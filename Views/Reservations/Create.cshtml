@using Revisao_ASP.NET_Web_API_Front.Models.ViewModels;

@model ReservationsViewModel

@{
    ViewData["Title"] = "Create reservation";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="w-25">
        <div class="form-group"
            <label asp-for="Origin">Origin</label>
            <input asp-for="Origin" type="text" class="form-control" />
        </div>
        <div class="form-group"
            <label asp-for="Destination">Destination</label>
            <input asp-for="Destination" type="text" class="form-control" />
        </div>
        <div class="form-group"
            <label asp-for="DepartureDate">Departure Date</label>
            <input asp-for="DepartureDate" type="date" class="form-control" />
        </div>
        <div class="form-group"
            <label asp-for="ReturnDate">Return Date</label>
            <input asp-for="ReturnDate" type="date" class="form-control" />
        </div>
        <div class="form-group"
            <label asp-for="DepartureTime">Departure Time</label>
            <input asp-for="DepartureTime" type="time" class="form-control" />
        </div>
        <div class="form-group"
            <label asp-for="ReturnTime">ReturnTime</label>
            <input asp-for="ReturnTime" type="time" class="form-control" />
        </div>
        <div class="form-group"
            <label asp-for="ClientId">Client Id</label>
            <input asp-for="ClientId" type="number" class="form-control" />
        </div>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Create</button>
    <button asp-action="Index" class="btn btn-danger">Cancel</button>
</form>