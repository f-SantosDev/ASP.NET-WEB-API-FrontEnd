@using Revisao_ASP.NET_Web_API_Front.Models.ViewModels;

@model ClientsViewModel

@{
    ViewData["Title"] = "Client details";
}

<h2>@ViewData["Title"]</h2>

<table class="table w-50">
    <tr>
        <th>ID</th>
        <td>@Model.ClientId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Surname</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>PhoneNumber</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    @if (Model.Reservations != null)
    {
        <tr>
            <th><br /><h2>Reservations:</h2></th>
        </tr>
        foreach(var reservation in Model.Reservations)
        {
            <tr>
                <td><br /></td>
            </tr>
            <tr>
                <th>Reservation ID:</th>
                <td>@reservation.ReservationId</td>
            </tr>
            <tr>
                <th>Origem:</th>
                <td>@reservation.Origin</td>
                <th>Destination:</th>
                <td>@reservation.Destination</td>
            </tr>
            <tr>
                <th>Departure Date:</th>
                <td>@reservation.DepartureDate.ToShortDateString()</td>
                <th>Return Date:</th>
                <td>@reservation.ReturnDate?.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Departure Time:</th>
                <td>@reservation.DepartureTime.ToString(@"hh\:mm")</td>
                <th>Return Time:</th>
                <td>@reservation.ReturnTime?.ToString(@"hh\:mm")</td>
            </tr>
        }
    }
</table>

<br />

<a href="@Url.Action("Index")" class="btn btn-danger">Back</a>

