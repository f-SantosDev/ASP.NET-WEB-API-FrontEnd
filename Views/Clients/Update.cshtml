@using Revisao_ASP.NET_Web_API_Front.Models.ViewModels;

@model ClientsViewModel

@{
    ViewData["Title"] = "Update Details";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Update" asp-route-clientId="@Model.ClientId" method="post">
    <div class="form-group w-25">

        <input asp-for="ClientId" class="form-control" type="hidden" />

        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" type="text" />
        </div>
        <div>
            <label asp-for="Surname">Surname</label>
            <input asp-for="Surname" class="form-control" type="text" />
        </div>
        <div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
        </div>
        <div>
            <label asp-for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" class="form-control" type="text" />
        </div>
    </div>
    
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
    <button asp-action="Index" class="btn btn-danger">Cancel</button>
</form>